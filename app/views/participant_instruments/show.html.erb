<%= render partial: 'participants/participant',
           locals: { participant: @participant_instrument.participant } %>

<%= form_with(url: root_path, method: :get) do |f| %>
  <% @participant_instrument.questions.each_with_index do |q, i| %>
    <strong><%= q.description %></strong>
    <br>
    <% q.options.each do |o| %>
      <%= f.radio_button "responses[#{i}][option_id]", o.id %>
      <%= f.label "responses[#{i}][option_id]", o.description %>
      <br>
    <% end %>
    <br>
  <% end %>
  <%= f.submit %>
<% end %>

